<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haysarodrigues.animations.MainActivity"
    style="@style/Base.Animation.AppCompat.DropDownUp"
    android:clickable="true"
    android:backgroundTint="@color/material_deep_teal_200">

    <ImageView
        android:id="@+id/bubblegum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:onClick="fade"
        android:src="@drawable/bubblegum"
        app:srcCompat="@drawable/bubblegum" />

    <ImageView
        android:id="@+id/marceline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.2"
        android:onClick="fade"
        android:src="@drawable/marceline"
        app:srcCompat="@drawable/marceline" />
</RelativeLayout>
